@model IEnumerable<Tangy.Models.SubCategory>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<br />
<h2> Sub Category List</h2>
<br />

@await Html.PartialAsync("_CreateButtonPartial")
<div class="form-border">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.Name)

            </th>
            <th>
                @Html.DisplayNameFor(m => m.Category.Name)

            </th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>

                <td>
                    @Html.DisplayFor(m => item.Category.Name)
                </td>


                <td>


                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-success">
                        Edit
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                        Details
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                        Delete
                    </a>

                </td>
            </tr>
        }
    </table>

</div>

